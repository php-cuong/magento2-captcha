<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <customer>
            <captcha>
                <dot_noise_level>20</dot_noise_level>
                <line_noise_level>20</line_noise_level>
                <shown_to_logged_in_user>
                    <sales_guest_form>1</sales_guest_form>
                </shown_to_logged_in_user>
                <always_for>
                    <sales_guest_form>1</sales_guest_form>
                </always_for>
            </captcha>
        </customer>
        <captcha translate="label">
            <frontend>
                <areas>
                    <sales_guest_form>
                        <label>Orders and Returns Form</label>
                    </sales_guest_form>
                </areas>
            </frontend>
        </captcha>
    </default>
</config>
